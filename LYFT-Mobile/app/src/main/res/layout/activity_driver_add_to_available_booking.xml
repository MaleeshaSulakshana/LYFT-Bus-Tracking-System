<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Driver.DriverAddToAvailableBookingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Add to booking"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="30dp"/>

        <EditText
            android:id="@+id/dateTime"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/background_white_with_border_black"
            android:shadowColor="@color/gray2"
            android:textColor="@color/gray2"
            android:hint="Available Date Time"
            android:textColorHint="@color/gray2"
            android:inputType="textPersonName"/>

        <EditText
            android:id="@+id/sheets"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/background_white_with_border_black"
            android:shadowColor="@color/gray2"
            android:textColor="@color/gray2"
            android:hint="Sheet Count"
            android:textColorHint="@color/gray2"
            android:inputType="number"/>

        <EditText
            android:id="@+id/startLocation"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/background_white_with_border_black"
            android:shadowColor="@color/gray2"
            android:textColor="@color/gray2"
            android:hint="Start Location"
            android:textColorHint="@color/gray2"
            android:inputType="text"/>

        <EditText
            android:id="@+id/endLocation"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/background_white_with_border_black"
            android:shadowColor="@color/gray2"
            android:textColor="@color/gray2"
            android:hint="End Location"
            android:textColorHint="@color/gray2"
            android:inputType="text"/>


        <Button
            android:id="@+id/btnAdd"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/black_button"
            android:text="Add"
            android:textColor="@color/white"
            app:backgroundTint="@null" />


        <Button
            android:id="@+id/backToDashboard"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/black_button_stork"
            android:text="Back to dashboard"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

    </LinearLayout>

</LinearLayout>